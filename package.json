{
  "name": "sRemote",
  "version": "0.6.0-dev",
  "description": "SSH Terminal",
  "main": "main.js",
  "author": "100LAR STUDIO <nikitstolarov@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^12.2.3",
    "electron-builder": "^23.3.1",
    "electron-reloader": "^1.2.3",
    "ssh2": "^1.15.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-is-packaged": "^1.0.2",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3",
    "html2canvas": "^1.4.1",
    "ini": "^4.1.1",
    "sortablejs": "^1.15.2",
    "ssh2": "^1.15.0"
  },
  "scripts": {
    "start": "electron --no-sandbox .",
    "dist": "electron-builder"
  },
  "build": {
    "asar": true,
    "files": [
      "static/",
      "index.html",
      "ssh.html",
      "logo.svg",
      "logo.png",
      "logo.ico",
      "settings.js",
      "package.json",
      "main.js"
    ],
    "fileAssociations": [
      {
        "ext": [
          "srem"
        ],
        "name": "sRemote connection/group File",
        "role": "SSH Terminal"
      }
    ],
    "appId": "sRemote",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.ico"
    },
    "linux": {
      "target": [
        "snap",
        "deb"
      ],
      "category": "Network",
      "icon": "logo.svg"
    },
    "portable": {
      "unicode": false,
      "artifactName": "${productName}-${version}-PORTABLE.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-INSTALLER.${ext}"
    }
  }
}
